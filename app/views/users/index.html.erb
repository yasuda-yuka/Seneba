<p id="notice"><%= notice %></p>

<br><font face="ＭＳ Ｐ明朝" size="6" color="#0000cd">ユーザー一覧</font><br>


  <%= text_field_tag "search[name]",@search_value %>  
  <%= submit_tag "検索" %>  
  <%= link_to "リセット", tasks_path%>  

<br>
<table>
  <thead>
    <tr>
      <th>ユーザーID</th>
      <th>名前</th>
      <th>パスワード</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.userid %></td>
        <td><%= user.username %></td>
        <td><%= user.password %></td>
        <td><%= link_to '詳細', user %></td>
        <td><%= link_to '更新', edit_user_path(user) %></td>
        <td><%= link_to '削除', user, method: :delete, data: { confirm: '削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

