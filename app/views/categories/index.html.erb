<p id="notice"><%= notice %></p>

<br><font face="ＭＳ Ｐ明朝" size="6" color="#0000cd">カテゴリー一覧</font><br>


  <%= text_field_tag "search[name]",@search_value %>  
  <%= submit_tag "検索" %>  
  <%= link_to "リセット", tasks_path%>  

<br>
<table>
  <thead>
    <tr>
      <th>カテゴリー名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.categoryname %></td>
        <td><%= link_to '詳細', category %></td>
        <td><%= link_to '更新', edit_category_path(category) %></td>
        <td><%= link_to '削除', category, method: :delete, data: { confirm: '削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'カテゴリーの登録', new_category_path %>